default_layout "compact"

on_force_close "quit"

simplified_ui false

pane_frames false

auto_layout true

theme "catppuccin-frappe"

default_mode "normal"

mouse_mode true

scroll_buffer_size 500000

copy_command "wl-copy"
copy_clipboard "system"

copy_on_select false
