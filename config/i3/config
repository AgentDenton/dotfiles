# Mod key Alt
set $mod Mod1

font pango:Iosevka Nerd Font 12

gaps inner 20
gaps outer 5

default_border pixel 1
default_floating_border pixel 1

floating_modifier $mod

# close a window
bindsym $mod+Shift+c kill

# horizontal split
bindsym $mod+Ctrl+h split h
# vertical split
bindsym $mod+Ctrl+v split v

# restart i3 inplace
bindsym $mod+Shift+r restart

# fullscreen mode
bindsym $mod+f fullscreen toggle

# switch to a previous workspace
bindsym $mod+Tab workspace back_and_forth

# change container layout (toggle split, tabbed)
bindsym $mod+Shift+s layout toggle split
bindsym $mod+Shift+t layout tabbed

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent

# launch terminal
bindsym $mod+Return exec alacritty

# take a screen show
bindsym Print exec --no-startup-id flameshot gui

# launch programs
bindsym $mod+d exec --no-startup-id rofi -show run
# switch windows
bindsym $mod+w exec --no-startup-id rofi -show window
# ssh session
bindsym $mod+s exec --no-startup-id rofi -show ssh

# volume control
bindsym $mod+Shift+m exec pactl set-sink-mute @DEFAULT_SINK@ toggle # Mute
bindsym $mod+F2 exec pactl set-sink-volume @DEFAULT_SINK@ -5%  # Up
bindsym $mod+F3 exec pactl set-sink-volume @DEFAULT_SINK@ +5%  # Down

# screen brightness
# cat /sys/class/backlight/amdgpu_bl0/brightness
bindsym $mod+F4 exec light -A 1 # increase screen brightness
bindsym $mod+F5 exec light -U 1 # decrease screen brightness

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# to display workspaces with icons
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# resize window mode
mode "resize" {
    # vim keys
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bar {
    height 30
    position top
    font pango:RobotoMono Nerd Font Bold 11
    status_command i3status
    strip_workspace_numbers yes
    tray_padding 1
    tray_output none

    colors {
        separator  #1f222d
        background #1f222d
        statusline #81a1c1

        focused_workspace   #1f222d #1f222d #81a1c1
        active_workspace    #1f222d #252936 #5e81ac
        inactive_workspace  #1f222d #1f222d #4c566a
        urgent_workspace    #1f222d #1f222d #ee829f
        binding_mode        #1f222d #81a1c1 #2e3440
    }
}

client.focused          #81a1c1 #81a1c1 #ffffff #81a1c1
client.unfocused        #2e3440 #1f222d #888888 #1f222d
client.focused_inactive #2e3440 #1f222d #888888 #1f222d
client.placeholder      #2e3440 #1f222d #888888 #1f222d
client.urgent           #900000 #900000 #ffffff #900000
client.background       #242424

exec --no-startup-id dunst
exec --no-startup-id xset s 300 5
exec --no-startup-id xset r rate 400 100
exec --no-startup-id setroot -cursor_name left_ptr
exec --no-startup-id setxkbmap -model pc105 -layout us,ua -variant qweety -option grp:win_space_toggle 
exec --no-startup-id xss-lock -n /usr/lib/xsecurelock/dimmer -l -- xsecurelock

# set wallpaper
exec --no-startup-id feh --bg-scale ~/git/nordic-wallpapers/wallpapers/ign_chineseIG.png
