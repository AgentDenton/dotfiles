# Mod key Alt
set $mod Mod4

font pango:RobotoMono Nerd Font 12

gaps inner 7
gaps outer 3

default_border pixel 2
default_floating_border pixel 1

floating_modifier $mod

# close a window
bindsym $mod+Shift+c kill

# horizontal split
bindsym $mod+Ctrl+h split h
# vertical split
bindsym $mod+Ctrl+v split v

# restart i3 inplace
bindsym $mod+Shift+r restart

# exit i3
bindsym $mod+Shift+e exec --no-startup-id i3exit.sh

# fullscreen mode
bindsym $mod+f fullscreen toggle

# switch to a previous workspace
bindsym $mod+Tab workspace back_and_forth

# change container layout (toggle split, tabbed)
bindsym $mod+Shift+s layout toggle split
bindsym $mod+Shift+t layout tabbed

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent

# launch terminal
bindsym $mod+Return exec alacritty

# take a screen show
bindsym Print exec --no-startup-id flameshot gui

# lock the screen
bindsym $mod+F9 exec --no-startup-id i3lock -c #2e3440 --nofork

# launch programs
bindsym $mod+d exec --no-startup-id rofi -show run
# switch windows
bindsym $mod+w exec --no-startup-id rofi -show window
# ssh session
bindsym $mod+s exec --no-startup-id rofi -show ssh

# volume control
bindsym $mod+F1 exec pactl set-sink-mute @DEFAULT_SINK@ toggle # Mute
bindsym $mod+F2 exec pactl set-sink-volume @DEFAULT_SINK@ -5%  # Up
bindsym $mod+F3 exec pactl set-sink-volume @DEFAULT_SINK@ +5%  # Down

# screen brightness
# cat /sys/class/backlight/amdgpu_bl0/brightness
bindsym $mod+F4 exec light -A 1 # increase screen brightness
bindsym $mod+F5 exec light -U 1 # decrease screen brightness

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# to display workspaces with icons
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws10 10

workspace $ws1 output DisplayPort-1
workspace $ws2 output DisplayPort-1
workspace $ws3 output DisplayPort-1
workspace $ws4 output DisplayPort-1
workspace $ws5 output DisplayPort-1
workspace $ws10 output eDP

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+0 move container to workspace number $ws10

# resize window mode
mode "resize" {
  # vim keys
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# class                 border  backgr. text    indicator
client.focused          #81a1c1 #81a1c1 #ffffff #81a1c1
client.unfocused        #2e3440 #1f222d #888888 #1f222d
client.focused_inactive #2e3440 #1f222d #888888 #1f222d
client.placeholder      #2e3440 #1f222d #888888 #1f222d
client.urgent           #900000 #900000 #ffffff #900000

bar {
  height 30
  workspace_min_width 40
  position top
  font pango:RobotoMono Nerd Font 13
  status_command i3status
  tray_padding 1
  strip_workspace_numbers yes

  colors {
    separator  #2E3440
    background #2E3440
    statusline #88C0D0

    # colorclass       border    background text
    focused_workspace  #88C0D0   #2E3440    #88C0D0
    active_workspace   #88C0D0   #2E3440    #88C0D0
    inactive_workspace #2E3440   #2E3440    #88C0D0
    urgent_workspace   #BF616A   #BF616A    #2E3440
    binding_mode       #88C0D0   #2E3440    #88C0D0
  }
}

# set wallpaper
exec --no-startup-id feh --bg-scale ~/pictures/wallpapers/mountains.jpg &
