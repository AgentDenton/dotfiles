general {
    interval = 10
    color_good = "#d8dee9" # Light green
    color_degraded = "#ebcb8b" # Light yellow
    color_bad = "#bf616a" # Light red
}

order += "ethernet _first_"
order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

ethernet _first_ {
    format_up = " %ip (%speed)"
    format_down = " down"
}

wireless _first_ {
    format_up = " up"
    format_down = " down"
}

volume master {
    format = " %volume"
    format_muted = " muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery all {
    format = "  %percentage"

    hide_seconds = true
    integer_battery_capacity = true
    last_full_capacity = true
}

tztime local {
    format = " %a %d-%m-%Y  %H:%M "
}
