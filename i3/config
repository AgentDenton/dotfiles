set $mod Mod1

set $conf_dir /home/agent_denton/.dotfiles/i3
set $scripts_dir /home/agent_denton/.dotfiles/i3/scripts

gaps inner 15
gaps outer 15

font pango:JetBrainsMono Nerd Font, Medium 9

default_border pixel 2
default_floating_border pixel 2
floating_modifier $mod

# close a window
bindsym $mod+Shift+c kill

# launch terminal
bindsym $mod+Return exec alacritty

# launch programs
bindsym $mod+d exec --no-startup-id rofi -show run

# switch windows
bindsym $mod+w exec --no-startup-id rofi -show window

# ssh session
bindsym $mod+s exec --no-startup-id rofi -show ssh

# take a screen show
bindsym Print exec --no-startup-id flameshot gui

# restart i3 inplace
bindsym $mod+Shift+r restart

# exit i3
bindsym $mod+Shift+e exec $scripts_dir/exit.sh

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# vertical split
bindsym $mod+Ctrl+h split h

# horizontal split
bindsym $mod+Ctrl+v split v

# fullscreen mode
bindsym $mod+f fullscreen toggle

# switch to a previous workspace
bindsym $mod+Tab workspace back_and_forth

# change container layout (tabbed, toggle split)
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# toggle bar
bindsym $mod+b exec --no-startup-id polybar-msg cmd toggle

set $ws1 "1:[www]"
set $ws2 "2:code"
set $ws3 "3:docs"
set $ws4 "4:social"
set $ws5 "5:games"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5

client.focused          #81a1c1 #51afef #ffffff #51afef
client.unfocused        #2e3440 #2e3440 #888888 #2e3440
client.focused_inactive #2e3440 #2e3440 #888888 #2e3440
client.placeholder      #2e3440 #2e3440 #888888 #2e3440
client.urgent           #900000 #900000 #ffffff #900000
client.background       #242424

# autostart apps
exec --no-startup-id dunst
exec --no-startup-id flameshot
exec --no-startup-id nm-applet
exec --no-startup-id nitrogen --restore
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -c 000000 --nofork

# run scripts
exec --no-startup-id $upath/.dotfiles/i3/scripts/startup.sh
exec --no-startup-id $upath/.dotfiles/polybar/startup.sh
